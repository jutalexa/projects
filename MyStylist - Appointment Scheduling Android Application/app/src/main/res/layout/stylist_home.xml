<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="techpro1.justinalexander.com.mystylist.stylisthome">



    <Button
        android:id="@+id/myavailiablity"
        android:layout_width="188dp"
        android:layout_height="70dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="10dp"
        android:text="My Availiablity"
        app:layout_constraintBottom_toTopOf="@+id/appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/services"
        android:layout_width="188dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="238dp"
        android:text="My Services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment" />

    <Button
        android:id="@+id/appointment"
        android:layout_width="188dp"
        android:layout_height="70dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="356dp"
        android:text="My Appointments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myavailiablity" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="224dp"
        android:layout_height="55dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="55dp"
        android:text="Welcome Stylist !"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/myavailiablity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
